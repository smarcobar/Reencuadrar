<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageViewLugarCercano"
            android:layout_width="80dp"
            android:layout_height="93dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="3dp"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dp">

            <TextView
                android:id="@+id/textViewNombreLugarCercano"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="TextViewzaragozaole"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDireccionCercano"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TextViewbjhbfhgbhejfbjdfhbvjdbjfvbjhbdhgfbehj"
                android:textSize="12sp" />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewRating"
                android:layout_width="58dp"
                android:layout_height="45dp"
                android:text="5/5"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
            />

            <TextView
                android:id="@+id/textViewOpened"
                android:layout_width="58dp"
                android:layout_height="45dp"
                android:text="ABIERTO"
                android:textAlignment="center"/>
        </android.support.v7.widget.LinearLayoutCompat>

<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="45dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageViewValoracion"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitCenter"
        android:src="@drawable/favorito"/>
    <ImageView
        android:id="@+id/imageViewDisponibilidad"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitCenter"
        android:src="@drawable/disponibilidad"/>

</android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</LinearLayout>